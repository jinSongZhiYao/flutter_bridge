<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:text="调用flutter方法-不带入参-返回String"
        android:layout_height="48dp"/>

    <Button
        android:id="@+id/btn_map"
        android:layout_width="match_parent"
        android:text="调用flutter方法-带入参-返回Map"
        android:layout_height="48dp"/>

    <Button
        android:id="@+id/btn_noreturn"
        android:layout_width="match_parent"
        android:text="调用flutter方法-带入参-无返回值"
        android:layout_height="48dp"/>



    <Button
        android:id="@+id/btn_notImplemented"
        android:layout_width="match_parent"
        android:text="调用flutter方法-没有实现的情况"
        android:layout_height="48dp"/>


    <Button
        android:id="@+id/btn_not_main_thread"
        android:layout_width="match_parent"
        android:text="调用flutter方法-非主线程"
        android:layout_height="48dp"/>


</LinearLayout>